<footer class="main-footer" role="contentinfo">
  <div class="footer-content grid grid-cols-4 gap-lg p-lg">
    <!-- Company Information -->
    <div class="footer-section">
      <h3 class="footer-heading">Company</h3>
      <ul class="footer-links">
        <li><%= link_to "About", "#" %></li>
        <li><%= link_to "Contact", "#" %></li>
        <li><%= link_to "Careers", "#" %></li>
        <li><%= link_to "Press", "#" %></li>
      </ul>
    </div>

    <!-- Applications -->
    <div class="footer-section">
      <h3 class="footer-heading">Applications</h3>
      <ul class="footer-links">
        <li><%= link_to "Amber", "#" %></li>
        <li><%= link_to "Brgen", "#" %></li>
        <li><%= link_to "PrivCam", "#" %></li>
        <li><%= link_to "BSD Ports", "#" %></li>
        <li><%= link_to "Hjerterom", "#" %></li>
      </ul>
    </div>

    <!-- Support -->
    <div class="footer-section">
      <h3 class="footer-heading">Support</h3>
      <ul class="footer-links">
        <li><%= link_to "Help", "#" %></li>
        <li><%= link_to "Documentation", "#" %></li>
        <li><%= link_to "API", "#" %></li>
        <li><%= link_to "Status", "#" %></li>
      </ul>
    </div>

    <!-- Legal & Compliance -->
    <div class="footer-section">
      <h3 class="footer-heading">Legal</h3>
      <ul class="footer-links">
        <li><%= link_to "Privacy", "#" %></li>
        <li><%= link_to "Terms", "#" %></li>
        <li><%= link_to "GDPR", "#" %></li>
        <li><%= link_to "Cookies", "#" %></li>
      </ul>
    </div>
  </div>

  <!-- Norwegian Compliance Notice -->
  <div class="compliance-notice p-md">
    <div class="flex justify-between items-center">
      <div class="compliance-info">
        <p class="text-small">
          Registered in Norway
          <span class="compliance-details">
            Org. number: XXX XXX XXX
          </span>
        </p>
        <p class="text-small">
          GDPR Compliant | Norwegian Data Residency | VAT Registered
        </p>
      </div>
      
      <div class="certification-badges flex gap-sm">
        <!-- Norwegian Business Registry -->
        <span class="badge badge-compliance" title="Verified with Brønnøysund Register Centre">
          BREG
        </span>
        <!-- GDPR Compliance -->
        <span class="badge badge-compliance" title="GDPR Compliance Verified">
          GDPR
        </span>
        <!-- Accessibility -->
        <span class="badge badge-compliance" title="WCAG 2.2 AAA Accessibility">
          WCAG
        </span>
      </div>
    </div>
  </div>

  <!-- Copyright and Social -->
  <div class="footer-bottom p-md">
    <div class="flex justify-between items-center">
      <div class="copyright">
        <p class="text-small">
          © <%= Date.current.year %> Pub Healthcare. 
          All rights reserved
        </p>
        <p class="text-small">
          Built with 
          <span class="tech-stack">
            <%= link_to "Rails #{Rails.version}", "https://rubyonrails.org", target: "_blank", rel: "noopener" %>,
            <%= link_to "AI³", "#" %>,
            <%= link_to "OpenBSD", "https://openbsd.org", target: "_blank", rel: "noopener" %>
          </span>
        </p>
      </div>

      <div class="social-links flex gap-sm">
        <%= link_to "https://github.com/johanntepstad/pub", 
              target: "_blank", 
              rel: "noopener",
              'aria-label': t('social.github'),
              class: "social-link" do %>
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path fill="currentColor" d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        <% end %>
        
        <%= link_to "mailto:contact@example.com", 
              'aria-label': t('social.email'),
              class: "social-link" do %>
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Development Tools (only in development) -->
  <% if Rails.env.development? %>
    <div class="dev-tools p-sm">
      <div class="flex justify-center gap-md text-small">
        <span>Environment: <%= Rails.env %></span>
        <span>Rails: <%= Rails.version %></span>
        <span>Ruby: <%= RUBY_VERSION %></span>
        <% if defined?(window.styleToggle) %>
          <span>Style Toggle: Available</span>
        <% end %>
      </div>
    </div>
  <% end %>
</footer>

<style>
/* Footer Styles */
.main-footer {
  background: var(--color-surface);
  border-top: 1px solid hsl(var(--hue-neutral), 0%, 90%);
  margin-top: auto;
}

.footer-heading {
  font-size: var(--font-h4);
  font-weight: 700;
  margin-bottom: var(--spacing-sm);
  color: var(--color-text);
}

.footer-links {
  list-style: none;
}

.footer-links li {
  margin-bottom: var(--spacing-xs);
}

.footer-links a {
  color: var(--color-text-light);
  text-decoration: none;
  font-size: var(--font-small);
  transition: color var(--transition-fast);
}

.footer-links a:hover {
  color: var(--color-primary);
}

.compliance-notice {
  background: hsl(var(--hue-neutral), 0%, 96%);
  border-top: 1px solid hsl(var(--hue-neutral), 0%, 90%);
  border-bottom: 1px solid hsl(var(--hue-neutral), 0%, 90%);
}

.badge-compliance {
  display: inline-block;
  padding: 2px 6px;
  background: var(--color-success);
  color: white;
  font-size: 10px;
  font-weight: 600;
  border-radius: 3px;
  text-transform: uppercase;
}

.footer-bottom {
  background: hsl(var(--hue-neutral), 0%, 94%);
}

.social-link {
  color: var(--color-text-light);
  transition: color var(--transition-fast);
}

.social-link:hover {
  color: var(--color-primary);
}

.tech-stack a {
  color: var(--color-primary);
  text-decoration: none;
}

.tech-stack a:hover {
  text-decoration: underline;
}

.dev-tools {
  background: var(--color-warning);
  color: var(--color-text);
  text-align: center;
  font-weight: 600;
}

/* Responsive Design */
@media (max-width: 768px) {
  .footer-content {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
  }
  
  .footer-bottom .flex {
    flex-direction: column;
    gap: var(--spacing-sm);
    text-align: center;
  }
  
  .compliance-notice .flex {
    flex-direction: column;
    gap: var(--spacing-sm);
    text-align: center;
  }
}

@media (max-width: 480px) {
  .footer-content {
    grid-template-columns: 1fr;
  }
}
</style>