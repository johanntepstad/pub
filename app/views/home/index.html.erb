<% content_for :title, "Pub Healthcare" %>
<% content_for :description, "Comprehensive healthcare platform with AI¬≥ orchestration" %>

<div class="home-hero p-xl text-center">
  <h1 class="display">Pub Healthcare</h1>
  <p class="font-h3 color-text-light m-lg">
    Comprehensive healthcare platform with AI¬≥ orchestration
  </p>
  
  <div class="hero-actions flex justify-center gap-md m-lg">
    <%= link_to "#apps", class: "btn btn-primary" do %>
      Applications
    <% end %>
    <%= link_to "/docs", class: "btn btn-secondary" do %>
      Documentation
    <% end %>
  </div>
</div>

<section id="apps" class="apps-section p-lg">
  <div class="max-w-6xl mx-auto">
    <h2 class="font-h1 text-center m-lg">Applications</h2>
    
    <div class="apps-grid grid grid-auto-fit gap-lg">
      <% @apps.each do |app| %>
        <div class="app-card card">
          <div class="app-icon text-center m-md">
            <span class="icon" style="font-size: 3rem;"><%= app[:icon] %></span>
          </div>
          
          <div class="app-content">
            <h3 class="font-h3 m-sm"><%= app[:title] %></h3>
            <p class="text-small color-text-light m-sm">
              <%= app[:description] %>
            </p>
            
            <div class="app-actions m-md">
              <%= link_to app[:path], class: "btn btn-primary" do %>
                Open App
              <% end %>
            </div>
          </div>
          
          <div class="app-status">
            <span class="status-badge status-prepared">
              Prepared
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

